
@{
    Layout = null;
}

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>HomPage</title>

        <!--  BOOTSTRAP online----------------------------------------------------------------------------------->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

        <!-- bootstrap package------------------------------------------------------------------------------------>
        <link href="~/Content/bootstrap.css" rel="stylesheet" />
        <script src="~/Scripts/bootstrap.js" type="text/javascript"></script>

        <!--- external style and script------------------------------------------------------------------------------>
        <link rel="stylesheet" href="~/Content/homepage.css" />
        <script type="text/javascript" src="~/Scripts/ValidationsFunctions.js"></script>

    </head>

    <body>



        <!-- relative div block -->
        <div id="" class="div_back_img_cls">
            <img src="~/Pictures/bodyimg.jpg" height="100%" width="100%">
        </div>


        <div style="position: absolute; top:3px">

            <!-- HEADER ======================================================================= -->
            <div style="position:fixed;">
                <header>
                    <nav>
                        <!-- <h1>GoodMoverz</h1> -->
                        <img width="180px" height="100px" src="~/Pictures/logo.png" alt="" style="margin-left: 50px;">
                        <div class="nav">
                            <li class="nav-item dropdown mt-4">
                                <a class="nav-link dropdown-toggle drd_signup_clss" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Sign Up
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="dropdown_list">@Html.ActionLink("as a Customer", "SignUpCustomer")</li>
                                    <li class="dropdown_list">@Html.ActionLink("as a Delivery Person", "SignUpDeliveryPerson")</li>
                                </ul>
                            </li>
                            <li>@Html.ActionLink("Log In", "LogIn" )</li>
                        </div>
                        <li><a>About Us</a></li>
                    </nav>
                </header>
            </div>
            <!-- ====================================================================== -->
            <!-- CALCULATE CHARGES BLOCK ======================================================================================== -->

            <div align="center" id="homepage_calculatingcharges">

                <div align="left">

                    <div>
                        <label> Pickup point</label>
                    </div>

                    <div>
                        <input id="pickuppoint" type="text" class="homepage_textbox" placeholder="enter pickup address">
                    </div>

                </div>

                <div align="left">
                    <div>
                        <label> Delivery point</label>
                    </div>

                    <div>
                        <input id="deliverypoint" type="text" placeholder="enter delivery address" class="homepage_textbox">
                    </div>
                </div>

                <div align="left">
                    <div>
                        <label> Average Distance</label>
                    </div>

                    <div>
                        <input id="avgDistance" type="text" placeholder="enter average distance" class="homepage_textbox">
                    </div>
                </div>

                <div align="left">
                    <div>
                        <label> Vehicle type</label>
                    </div>

                    <div>
                        <select id="vehicleType" type="dropdown" placeholder="enter average distance" class="homepage_textbox">
                            <option>Bike</option>
                            <option>AutoRikshaw</option>
                            <option>Truck</option>
                        </select>
                    </div>
                </div>

                <input id="btn" type="submit" value="Calculate Charges" onclick="calculateCharges()">

                <input id="charges" type="text" placeholder="charges will be :" class="homepage_textbox" disabled />


            </div>

            <!-- =========================================================================================== -->
            <!-- Carousel cards================================================================================================== -->

            <div style="margin: 50px 0px 0px 0px ;">

                <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">

                            <!-- cards---------------------------------------------------------------------------- -->
                            <div id="" class="cards_booknow_cls">
                                <div class="card" style="width: 18rem; margin-right: 80px;">
                                    <img src="~/Pictures/card1bike.png" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">Book a Delivery bike</h5>
                                        <p class="card-text">If you have small delivery goods and want fast service delivery bike is a better choice. Its cheap and fast too.</p>
                                        <a href="#" class="btn btn-primary">Book Now</a>
                                    </div>
                                </div>

                                <div class="card" style="width: 18rem; margin-right: 80px;">
                                    <img src="~/Pictures/card2autorikshaw.jpg" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">Book a Delivery AutoRikshaw</h5>
                                        <p class="card-text">If you have moderate delivery goods and want safe service delivery autoRikshaw is a better choice. Its moderate in rate.</p>
                                        <a href="#" class="btn btn-primary">Book Now</a>
                                    </div>
                                </div>

                                <div class="card" style="width: 18rem;">
                                    <img src="~/Pictures/card3truck.jpg" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">Book a Delivery Truck</h5>
                                        <p class="card-text">If you have to shifting large ammount of delivery goods and want safe service delivery Truck is a better choice. Its a safest way.</p>
                                        <a href="#" class="btn btn-primary">Book Now</a>
                                    </div>
                                </div>
                            </div>

                            <!-- ----------------------------------------------------------------------------- -->

                        </div>
                        <div class="carousel-item">

                            <!-- cards---------------------------------------------------------------------------- -->
                            <div id="" class="cards_booknow_cls">
                                <div class="card" style="width: 18rem; margin-right: 80px;">
                                    <img src="~/Pictures/card1bike.png" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">Book a Delivery bike</h5>
                                        <p class="card-text">If you have small delivery goods and want fast service delivery bike is a better choice. Its cheap and fast too.</p>
                                        <a href="#" class="btn btn-primary">Book Now</a>
                                    </div>
                                </div>

                                <div class="card" style="width: 18rem; margin-right: 80px;">
                                    <img src="~/Pictures/card2autorikshaw.jpg" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">Book a Delivery AutoRikshaw</h5>
                                        <p class="card-text">If you have moderate delivery goods and want safe service delivery autoRikshaw is a better choice. Its moderate in rate.</p>
                                        <a href="#" class="btn btn-primary">Book Now</a>
                                    </div>
                                </div>

                                <div class="card" style="width: 18rem;">
                                    <img src="~/Pictures/card3truck.jpg" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">Book a Delivery Truck</h5>
                                        <p class="card-text">If you have to shifting large ammount of delivery goods and want safe service delivery Truck is a better choice. Its a safest way.</p>
                                        <a href="#" class="btn btn-primary">Book Now</a>
                                    </div>
                                </div>
                            </div>

                            <!-- ----------------------------------------------------------------------------- -->


                        </div>
                    </div>
                </div>
            </div>






        </div>
    </body>
</html>
